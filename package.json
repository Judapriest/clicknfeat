{
  "name": "eauc-clicknfeat",
  "version": "0.1.0",
  "engines": {
    "node": "0.10.28"
  },
  "devDependencies": {
    "babel-cli": "^6.4.5",
    "babel-eslint": "^5.0.0-beta6",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "bower": "^1.6.8",
    "eslint-watch": "^2.1.7",
    "grunt": "^0.4.5",
    "grunt-angular-templates": "^0.5.7",
    "grunt-babel": "^6.0.0",
    "grunt-contrib-concat": "^0.5.1",
    "grunt-contrib-sass": "^0.9.2",
    "grunt-contrib-uglify": "^0.9.1",
    "grunt-copy": "^0.1.0",
    "grunt-usemin": "^3.1.1",
    "gruntify-eslint": "gyandeeps/gruntify-eslint",
    "jasmine-core": "^2.4.1",
    "k": "^0.3.0",
    "karma": "^0.13.19",
    "karma-chrome-launcher": "^0.2.2",
    "karma-jasmine": "^0.3.6",
    "karma-jasmine-diff-reporter": "^0.3.1",
    "karma-jasmine-html-reporter": "^0.1.8"
  },
  "scripts": {
    "postinstall": "bower install && grunt build",
    "dist:client:js:build": "babel --only *.es6 -s true -d client/dev/app client/dev/app",
    "dist:client:js:lint": "esw --ext .es6 client/dev/app/",
    "dist:client:css:build": "sass -I client/dev/app client/dev/app/styles/app.scss:client/dev/app/styles/app.css",
    "dev:server:run": "RACK_ENV=production bundle exec rerun --dir server -- rackup -p 4567",
    "dev:client:js:watch": "npm run dist:client:js:build -- --watch",
    "dev:client:js:lint": "npm run dist:client:js:lint -- --watch",
    "dev:client:css:watch": "npm run dist:client:css:build -- --watch",
    "test": "karma start"
  }
}
